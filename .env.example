# Database Configuration
PGLITE_DATA_DIR=./db_data

# Embedding Provider Configuration
# Options: "openai" or "ollama"
EMBEDDING_PROVIDER=openai

# OpenAI Configuration (required if EMBEDDING_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (required if EMBEDDING_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434

# Embedding Model Configuration
# For OpenAI: text-embedding-ada-002, text-embedding-3-small, text-embedding-3-large
# For Ollama: nomic-embed-text, mxbai-embed-large, etc.
EMBEDDING_MODEL=nomic-embed-text

# Embedding Dimensions
# OpenAI ada-002: 1536, OpenAI 3-small: 1536, OpenAI 3-large: 3072
# Ollama nomic-embed-text: 768, mxbai-embed-large: 1024
EMBEDDING_DIMENSIONS=768
